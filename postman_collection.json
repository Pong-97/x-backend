        {
          "name": "添加到购物车",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"productId\": 1001,\n  \"quantity\": 2\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cart/add",
              "host": ["{{baseUrl}}"],
              "path": ["cart", "add"]
            }
          }
        },
        {
          "name": "更新购物车",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cartId\": 1,\n  \"quantity\": 3,\n  \"selected\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cart/update",
              "host": ["{{baseUrl}}"],
              "path": ["cart", "update"]
            }
          }
        },
        {
          "name": "删除购物车商品",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/cart/delete/1",
              "host": ["{{baseUrl}}"],
              "path": ["cart", "delete", "1"]
            }
          }
        }
      ]
    },
    {
